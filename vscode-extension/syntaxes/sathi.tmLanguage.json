{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Sathi",
  "patterns": [
    {
      "include": "#keywords"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#comments"
    },
    {
      "include": "#functions"
    }
  ],
  "repository": {
    "keywords": {
      "patterns": [
        {
          "match": "\\b(sathi|yo|ho|bhana|naya|sangai|bhane|natra|ani|wa|xaina|dohoryau|choti|samma|kam|gar|gara|farki|sakkyo|joda|ghatau|guna|bhaag|parkha|laga)\\b",
          "name": "keyword.control.sathi"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "match": "\".*?\"",
          "name": "string.quoted.double.sathi"
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "match": "\\b\\d+(\\.\\d+)?\\b",
          "name": "constant.numeric.sathi"
        }
      ]
    },
    "comments": {
      "patterns": [
        {
          "match": "#.*$",
          "name": "comment.line.sathi"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "match": "\\b(kam|gara)\\s+\\w+",
          "name": "entity.name.function.sathi"
        }
      ]
    }
  },
  "scopeName": "source.sathi"
}
